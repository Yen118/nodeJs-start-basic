<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Node.js</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="topnav">
        <a class="active" href="#home">Home</a>
        <a href="#news">News</a>
        <a href="#contact">Contact</a>
        <a href="#about">About</a>
      </div>
      
      <div style="padding-left:16px">
        <h2>List Users:</h2>
        <div>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i = 0; i < dataUser.length; i++) { %>
                        <tr>
                            <td><%= dataUser[i].id %></td>
                            <td><%= dataUser[i].fristName %></td>
                            <td><%= dataUser[i].lastName %></td>
                            <td class="buttonCrud">
                                <a href="/detail/user/<%= dataUser[i].id%>">Detail</a>
                                <form action="/edit-user/<%= dataUser[i].id%>" method="get">
                                    <button type="submit">Edit</button>
                                </form>
                                <form action="/delete-user" method="post">
                                    <input type="text" hidden value="<%= dataUser[i].id%>" name="id"/>
                                    <button type="submit">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% } %>
                </tbody> 
            </table>    
        </div>
        
        <div class="create-user-container">           
            <form action="/create-new-user" method="post">
                <div class="createUserTopic">Create a new user:</div>
                <div>
                    <label>Frist Name:</label>
                    <input type="text" name="fristName"/>
                </div>
                <div>
                    <label>Last Name:</label>
                    <input type="text" name="lastName"/>
                </div>
                <div>
                    <label>Email:</label>
                    <input type="email" name="email"/>
                </div>
                <div>
                    <label>Adress:</label>
                    <input type="text" name="address"/>
                </div>
                <div>
                    <button type="submit" class="submitButton">Submit</button>
                </div>
            </form>
        </div>
      </div>
      
</body>
</html>